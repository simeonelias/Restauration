<% include dtopbar%>

<div class="" style="width: 60%; margin: 15px auto; background-color: rgb(163, 245, 200); padding: 16px; border-radius: 10px">
    <center><h2>la page d'ajout des articles</h2></center>


    <form action="http://localhost:3000/file_upload" method="POST" enctype="multipart/form-data">
      
        <div class="form-group row">
          <div class="col-lg-4 col-md-4 col-sm-12">
          <label for="title">Entrer le nom</label>
          </div>
          <div class="col-lg-8 col-md-8 col-sm-12">
          <input class="form-control" id="title" name="title" aria-describedby="emailHelp" type="text" placeholder="Enter le nom de l'aliment">
          </div>
        </div>

        <div class="form-group row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <label for="title">Choisir une Catégorie</label>
            </div>

            <div class="col-lg-8 col-md-8 col-sm-12">
            <select name="categorie" id="categorie" class="custom-select">
              <option  selected="">Selectionnez une categorie</option>
              <option  value="Catégorie Africaine">Catégorie Africaine</option>
              <option  value="Catégorie Italienne">Catégorie Italienne</option>
            </select>
          </div>
          </div>

        <div class="form-group row">
          <div class="col-lg-4 col-md-4 col-sm-12">
          <label for="description">Entrer votre description</label>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-12">
          <textarea class="form-control" id="description" name="description" rows="3"></textarea>
        </div>
        </div>
        <div class="form-group row">
          <div class="col-lg-4 col-md-4 col-sm-12">
            <label for="image">Choisir une image</label>
          </div>

            <div class="col-lg-8 col-md-8 col-sm-12">
            
                <input class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp" type="file" name="image">
              
             
            </div>
            </div>
         
              

          <center><button type="submit" class="btn btn-primary" name="submit" style="width:50%">Envoyer</button></center> 
    </form>
    </div>


    <script src="bootstrap/js/jquery-3.3.1.js"></script> 
<script src="bootstrap/js/popper.min.js"></script>
<script src="bootstrap/js/bootstrap.min.js"></script>

</body>
</html>